<?xml version="1.0" encoding="utf-8"?>

<root xmlns:android="http://schemas.android.com/apk/res/android">
    
    <init>
        <log text="SignInAndroidHelper -> Applying UPL to copy Java helper"/>
    </init>
    
    <prebuildCopies>
        
        <copyFile
                src="$S(PluginDir)/Private/Android/SignInAndroidHelper.java"
                dst="$S(BuildDir)/src/com/Plugins/SignInAndroidHelper/SignInAndroidHelper.java"/>
    </prebuildCopies>

    <gameActivityImportAdditions>
        <insert>
            import com.Plugins.SignInAndroidHelper.SignInAndroidHelper;
        </insert>
    </gameActivityImportAdditions>

    <gameActivityOnActivityResultAdditions>
        <insert>
            SignInAndroidHelper.onActivityResult(this, requestCode, resultCode, data);
        </insert>
    </gameActivityOnActivityResultAdditions>


    <buildGradleAdditions>
        <insert>
            repositories {
                google()
                mavenCentral()
            }
        </insert>

        <insert>
            dependencies {
                implementation 'com.google.android.gms:play-services-auth:21.4.0'
            }
        </insert>

    </buildGradleAdditions>
    
</root>